<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDetailsActivity">


<!--    <ImageView-->
<!--        android:id="@+id/ivDetailFoodImage"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="260dp"-->
<!--        app:srcCompat="@drawable/combo" />-->


    <androidx.cardview.widget.CardView
        android:id="@+id/cardDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:elevation="15dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDetailFoodImage"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/monan" />

            <TextView
                android:id="@+id/tvDetailFoodName"
                style="@style/TextViewMedium"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:text="CƠM ĐẢO GÀ QUAY"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <TextView
                style="@style/TextViewMedium"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingLeft="10dp"
                android:text="Mô tả"
                android:textStyle="bold" />

            d

            <TextView
                android:id="@+id/tvDescription"
                style="@style/TextViewDefault"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="&#8226; Món ăn bán chạy nhất tháng tại quán \n&#8226; Gà siêu mềm, siêu ngon \n&#8226; Topping vô vàn"
                android:textColor="#ff707070" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="10dp">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/btnDetailCount"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:backGroundColor="#ED000000"
                    app:finalNumber="99"
                    app:initialNumber="1"
                    app:textSize="6dp" />

                <TextView
                    android:id="@+id/tvDetailPrice"
                    style="@style/TextViewDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="42.000đ"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnDetailOrder"
        style="@style/ButtonRed"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#009E3A"
        android:text="Đặt hàng"
        android:textStyle="bold" />

</RelativeLayout>